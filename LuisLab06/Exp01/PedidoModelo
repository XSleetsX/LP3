package Lab06_Act1;
import java.util.ArrayList;
import java.util.List;

public class PedidoModelo {
	private List<Pedido> pedidos;
	private List<String> historial;
	
	public PedidoModelo() {
		pedidos = new ArrayList<Pedido>();
		historial = new ArrayList<String>();
	}
	
	public void agregarPedido(Pedido pedido) {
		pedidos.add(pedido);
	}
	public void eliminarPedido(String nombrePlato) {
		for (int i = 0; i < pedidos.size(); i++) { 
			if (pedidos.get(i).getNombrePlato().equals(nombrePlato)) {
				pedidos.remove(i);
			}
		}
	}
	public void actualizarPedido(String nombrePlato, String nuevoNombre) {
		for (int i = 0; i < pedidos.size(); i++) {
			if (pedidos.get(i).getNombrePlato().equals(nombrePlato)) {
				pedidos.get(i).setNombrePlato(nuevoNombre);
			}
		}
	}
	public boolean buscarPedido(String nombrePlato) {
		for	(int i = 0; i < pedidos.size(); i++) { 
			if (pedidos.get(i).getNombrePlato().equals(nombrePlato)) {
				return true;
			}
		}
		return false;
	}
	public void completarPedido(String nombrePlato) {
		for (int i = 0; i < pedidos.size(); i++) {
			if (pedidos.get(i).getNombrePlato().equals(nombrePlato)) {
				pedidos.get(i).completarPedido();
			}
		}
	}
	public int contarPedidos() {
		return pedidos.size();
	}
	public List<Pedido> getPedidos() {
		return pedidos;
	}
	public List<String> getHistorial() {
		return historial;
	}
}
