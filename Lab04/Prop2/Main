package Prop2;

public class Main {
	public static void main(String[] args) {
		Calculadora calculadora = new Calculadora();
		
		try {
			System.out.println(calculadora.sumar(1, 5));
			System.out.println(calculadora.sumar(-4, 5));
		} catch (IllegalArgumentException e) {
			System.out.println(e);
		}
		try {
			System.out.println(calculadora.restar(10, 4));
			System.out.println(calculadora.restar(4, -9));
		} catch (IllegalArgumentException e) {
			System.out.println(e);
		}
		try {
			System.out.println(calculadora.multiplicar(8, 3));
			System.out.println(calculadora.multiplicar(-1, -7));
		} catch (IllegalArgumentException e) {
			System.out.println(e);
		}
		try {
			System.out.println(calculadora.dividir(10, 2));
			System.out.println(calculadora.dividir(15, 0));
		} catch (DivisionPorCeroException e) {
			System.out.println(e);
		}
	}

}
