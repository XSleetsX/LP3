public class Carcaj extends Item {
    private int ataque;
    private int costo;
    private boolean equipado;

    public Carcaj(int tier) {
        super("Carcaj", "Dispara una flecha con fuerza que hace mucho da√±o", tier);
        this.equipado = false;
        switch(tier) {
	    	case 0: {
	            this.ataque = 80;
	            this.costo = 45;
	            break;
	    	}
	    	case 1: {
	            this.ataque = 140;
	            this.costo = 55;
	            break;
	    	}
	    	case 2: {
	            this.ataque = 220;
	            this.costo = 60;
	            break;
	    	}
	    	case 3: {
	            this.ataque = 340;
	            this.costo = 65;
	            break;
	    	}
	    }
    }

    public int getAtaque() { return ataque; }
    public int getCosto() { return costo; }
    public boolean estaEquipado() { return equipado; }
    
    public void equipar() { this.equipado = true; }
    public void desequipar() { this.equipado = false; }
    
    @Override
    public String toString() {
        return " " + nombre + " | " + cantidad + " | " + descripcion + " | " + tier + " | " + ataque + " | " + costo;
    }
}
