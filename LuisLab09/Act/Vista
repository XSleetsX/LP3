import javax.swing.*;
import java.awt.*;

public class Vista extends JFrame {
	public void menuLogin() {
		pack();
		setLocationRelativeTo(null);
		setTitle("Login");
		setSize(300, 300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		FlowLayout flowLayout = new FlowLayout(FlowLayout.CENTER,15,15);
		JButton botonIngresar = new JButton("Ingresar");
		JButton botonCancelar = new JButton("Cancelar");
		JTextField campoUsuario = new JTextField(15);
		JPasswordField campoContrasenia = new JPasswordField(15);
		JLabel textoBienvenida = new JLabel("Bienvenido, LUIS RICARDO ARIZAGA USNAYO");
		JLabel textoUsuario = new JLabel("Usuario:");
		JLabel textoContrasenia = new JLabel("Contraseña:");
		
		setLayout(flowLayout);
		add(textoBienvenida);
		add(textoUsuario);
		add(campoUsuario);
		add(textoContrasenia);
		add(campoContrasenia);
		add(botonIngresar);
		add(botonCancelar);
		setVisible(true);
	}
	public void menuComidas() {
		pack();
		setLocationRelativeTo(null);
		setTitle("Almuerzos");
		setSize(500,500);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		GridLayout gridlayout = new GridLayout(2,3);
		JButton botonPedir = new JButton("Pedir");
		JLabel textoLomoSaltado = new JLabel("Lomo Saltado");
		JLabel textoCausaRellena = new JLabel("Causa Rellena");
		JLabel textoCeviche = new JLabel("Ceviche");
		JLabel textoChicharron = new JLabel("Chicharrón");
		JLabel textoAnticucho = new JLabel("Anticucho");
		JLabel textoArrozChaufa = new JLabel("Arroz Chaufa");
		
		ImageIcon imagenLomoSaltado = new ImageIcon("Direccion de la imagen");
		ImageIcon imagenCausaRellena = new ImageIcon();
		ImageIcon imagenCeviche = new ImageIcon();
		ImageIcon imagenChicharron = new ImageIcon();
		ImageIcon imagenAnticucho = new ImageIcon();
		ImageIcon imagenArrozChaufa = new ImageIcon();
		
		setLayout(gridlayout);
		add(textoLomoSaltado, imagenLomoSaltado, botonPedir);
		setVisible(true);
	}
}
