import javax.swing.*;
import java.awt.*;

public class Vista extends JFrame {
	public void menuLogin() {
		pack();
		setLocationRelativeTo(null);
		setTitle("Login");
		setSize(300, 300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		FlowLayout flowLayout = new FlowLayout(FlowLayout.CENTER,15,15);
		JButton botonIngresar = new JButton("Ingresar");
		JButton botonCancelar = new JButton("Cancelar");
		JTextField campoUsuario = new JTextField(15);
		JPasswordField campoContrasenia = new JPasswordField(15);
		JLabel textoBienvenida = new JLabel("Bienvenido, LUIS RICARDO ARIZAGA USNAYO");
		JLabel textoUsuario = new JLabel("Usuario:");
		JLabel textoContrasenia = new JLabel("Contrase√±a:");
		
		setLayout(flowLayout);
		add(textoBienvenida);
		add(textoUsuario);
		add(campoUsuario);
		add(textoContrasenia);
		add(campoContrasenia);
		add(botonIngresar);
		add(botonCancelar);
		setVisible(true);
	}
	public void menuComidas() {
		pack();
		setLocationRelativeTo(null);
		setTitle("Almuerzos");
		setSize(500,300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		GridLayout gridLayout = new GridLayout(1,3);
		JButton botonPedirLomoSaltado = new JButton("Pedir Lomo Saltado");
		ImageIcon imagenLomoSaltado = new ImageIcon("C:\\Users\\Alumno\\Pictures\\comidasJava\\LomoSaltado.png");
		JLabel iconoLomoSaltado = new JLabel(imagenLomoSaltado);
		JPanel panelLomoSaltado = new JPanel();
		panelLomoSaltado.add(iconoLomoSaltado);
		panelLomoSaltado.add(botonPedirLomoSaltado);
		
		JButton botonPedirCausaRellena = new JButton("Pedir Causa Rellena");
		ImageIcon imagenCausaRellena = new ImageIcon("C:\\Users\\Alumno\\Pictures\\comidasJava\\CausaRellena.png");
		JLabel iconoCausaRellena = new JLabel(imagenCausaRellena);
		JPanel panelCausaRellena = new JPanel();
		panelCausaRellena.add(iconoCausaRellena);
		panelCausaRellena.add(botonPedirCausaRellena);
		
		JButton botonPedirCeviche = new JButton("Pedir Ceviche");
		ImageIcon imagenCeviche = new ImageIcon("C:\\Users\\Alumno\\Pictures\\comidasJava\\Ceviche.png");
		JLabel iconoCeviche = new JLabel(imagenCeviche);
		JPanel panelCeviche = new JPanel();
		panelCeviche.add(iconoCeviche);
		panelCeviche.add(botonPedirCeviche);
		
		setLayout(gridLayout);
		add(panelLomoSaltado);
		add(panelCausaRellena);
		add(panelCeviche);
		setVisible(true);
	}
	public void menuLugares() {
		pack();
		setLocationRelativeTo(null);
		setTitle("Lugares");
		setSize(500,500);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		BorderLayout borderLayout = new BorderLayout();
		JButton botonCiudadNorte = new JButton("Ciudades del Norte");
		JButton botonCiudadOeste = new JButton("Ciudades del Oeste");
		JButton botonCiudadSur = new JButton("Ciudades del Sur");
		JButton botonCiudadEste = new JButton("Ciudades del Este");
		JButton botonCiudadCentro = new JButton("Ciudades del Centro");
		
		ImageIcon imagenCiudadNorte = new ImageIcon("Direccion de la imagen");
		ImageIcon imagenCiudadOeste = new ImageIcon();
		ImageIcon imagenCiudadSur = new ImageIcon();
		ImageIcon imagenCiudadEste = new ImageIcon();
		ImageIcon imagenCiudadCentro = new ImageIcon();
		
		setLayout(borderLayout);
		add(botonCiudadNorte, BorderLayout.NORTH);
		add(botonCiudadOeste, BorderLayout.WEST);
		add(botonCiudadSur, BorderLayout.SOUTH);
		add(botonCiudadEste, BorderLayout.EAST);
		add(botonCiudadCentro, BorderLayout.CENTER);
		setVisible(true);
	}
}
