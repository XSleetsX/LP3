import java.sql.*;

public class BDmodelo {
//Métodos TABLA personajes
	public void insertarPersonaje(String nombre, int vida, int ataque, int defensa, int alcance, int id_inventario) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO personajes (nombre, vida, ataque, defensa, alcance, id_inventario) VALUES (?,?,?,?,?,?");
			pstmt.setString(1, nombre);
			pstmt.setInt(2, vida);
			pstmt.setInt(3, ataque);
			pstmt.setInt(4, defensa);
			pstmt.setInt(5, alcance);
			pstmt.setInt(6, id_inventario);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
				
	}
	public void actualizarPersonaje(int id_personaje, String nombre, int vida, int ataque, int defensa, int alcance, int id_inventario) {
		try {PreparedStatement pstmt = con.prepareStatement("UPDATE personajes SET nombre = ?, "
			+ "vida = ?" + "ataque = ?" + "defensa = ?" + "alcance = ?" + "id_inventario: ? " + "WHERE id_personaje = ?");
			pstmt.setString(1, nombre);
			pstmt.setInt(2, vida);
			pstmt.setInt(3, ataque);
			pstmt.setInt(4, defensa);
			pstmt.setInt(5, alcance);
			pstmt.setInt(6, id_inventario);
			pstmt.setInt(7, id_personaje);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void mostrarPersonaje(int id_personaje) {
		try {Statement stmt = con.statement("SELECT nombre, vida, ataque, defensa, alcance FROM personajes WHERE id_personaje = " + id_personaje);
			ResultSet rs = stmt.executeQuery("COLOCAR EL STATEMENT");
			System.out.print("\nNombre: " + rs.getString("nombre"));
			System.out.print(" | Vida: " + rs.getInt("vida"));
			System.out.print(" | Ataque: " + rs.getInt("ataque"));
			System.out.print(" | Defensa: " + rs.getInt("defensa"));
			System.out.print(" | Alcance: " + rs.getInt("alcance"));
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void borrarPersonaje(int id_personaje) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM personajes WHERE id_personaje = ?");
			pstmt.setInt(1, id_personaje);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
	//Métodos TABLA enemigos
	public void insertarEnemigo(String nombre, int vida, int ataque, String tipo) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (nombre, vida, ataque, tipo) enemigos VALUES (?,?,?,?)");
			pstmt.setString(1, nombre);
			pstmt.setInt(2, vida);
			pstmt.setInt(3, ataque);
			pstmt.setString(4, tipo);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
				
	}
	public void actualizarEnemigo(int id_enemigo, String nombre, int vida, int ataque, String tipo) {
		try {PreparedStatement pstmt = con.prepareStatement("UPDATE enemigos SET nombre = ?, "
			+ "vida = ?" + "ataque = ?" + "tipo = ?" + "WHERE id_enemigo = ?");
			pstmt.setString(1, nombre);
			pstmt.setInt(2, vida);
			pstmt.setInt(3, ataque);
			pstmt.setString(4, tipo);
			pstmt.setInt(5, id_enemigo);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void mostrarEnemigo(int id_enemigo) {
		try {Statement stmt = con.statement("SELECT nombre, vida, ataque, tipo FROM enemigos WHERE id_enemigo = " + id_enemigo);
			ResultSet rs = stmt.executeQuery("COLOCAR EL STATEMENT");
			System.out.print("\nNombre: " + rs.getString("nombre"));
			System.out.print(" | Vida: " + rs.getInt("vida"));
			System.out.print(" | Ataque: " + rs.getInt("ataque"));
			System.out.print(" | Tipo: " + rs.getString("tipo"));
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void borrarEnemigo(int id_enemigo) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM enemigos WHERE id_enemigo = ?");
			pstmt.setInt(1, id_enemigo);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
	//Métodos TABLA items
	public void insertarItem(String nombre, String tipo, String descripcion, int cantidad) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (nombre, tipo, descripcion, cantidad) items VALUES (?,?,?,?)");
			pstmt.setString(1, nombre);
			pstmt.setString(2, tipo);
			pstmt.setString(3, descripcion);
			pstmt.setString(4, tipo);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
				
	}
	public void actualizarItem(int id_item, String nombre, String tipo, String descripcion, int cantidad) {
		try {PreparedStatement pstmt = con.prepareStatement("UPDATE items SET nombre = ?, "
			+ "tipo = ?" + "descripcion = ?" + "cantidad = ?" + "WHERE id_item = ?");
			pstmt.setString(1, nombre);
			pstmt.setString(2, tipo);
			pstmt.setString(3, descripcion);
			pstmt.setInt(4, cantidad);
			pstmt.setInt(5, id_item);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void mostrarItem(int id_item) {
		try {Statement stmt = con.statement("SELECT nombre, tipo, descripcion, cantidad FROM items WHERE id_item = " + id_item);
			ResultSet rs = stmt.executeQuery("COLOCAR EL STATEMENT");
			System.out.print("\nNombre: " + rs.getString("nombre"));
			System.out.print(" | Tipo: " + rs.getString("tipo"));
			System.out.print(" | Descripción: " + rs.getString("descripcion"));
			System.out.print(" | Cantidad: " + rs.getInt("cantidad"));
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void borrarItem(int id_item) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM items WHERE id_item = ?");
			pstmt.setInt(1, id_item);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
    //Métodos TABLA inventarios
    public void insertarInventario(int id_personaje) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (id_personaje) inventarios VALUES (?)");
			pstmt.setInt(1, id_personaje);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}			
	}
	public void borrarInventario(int id_inventario) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM inventarios WHERE id_inventario = ?");
			pstmt.setInt(1, id_inventario);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	} 
    //Métodos TABLA inventarios_items
    public void insertarIntentario_Item(int id_inventario, int id_item) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (id_inventario, id_item) inventarios_items VALUES (?,?)");
			pstmt.setInt(1, id_inventario);
            pstmt.setInt(2, id_item);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}			
	}
    public void borrarInventario_Item(int id_inventario_item) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM inventarios_items WHERE id_inventario_item = ?");
			pstmt.setInt(1, id_inventario_item);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
    //Métodos TABLA combates
    public void insertarCombate(int id_personaje, int id_enemigo, boolean resultado) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (id_personaje, id_enemigo, resultado) combates VALUES (?,?,?)");
			pstmt.setInt(1, id_personaje);
            pstmt.setInt(2, id_enemigo);
            pstmt.setBoolean(3, resultado);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
				
	}
	public void mostrarCombate(int id_combate) {
		try {Statement stmt = con.statement("SELECT id_personaje, id_enemigo, resultado FROM combates WHERE id_combate = " + id_combate);
			ResultSet rs = stmt.executeQuery("COLOCAR EL STATEMENT");
			System.out.print("\nId_personaje: " + rs.getInt("id_personaje"));
			System.out.print(" | Id_enemigo: " + rs.getInt("id_enemigo"));
			System.out.print(" | Resultado: " + rs.getBoolean("resultado"));
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void borrarCombate(int id_combate) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM combates WHERE id_combate = ?");
			pstmt.setInt(1, id_combate);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
    //Métodos TABLA turnos
    public void insertarTurno(String descripcion) {
		try {PreparedStatement pstmt = con.prepareStatement("INSERT INTO (descripcion) turnos VALUES (?)");
			pstmt.setString(1, descripcion);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
				
	}
	public void mostrarTurno(int id_turno) {
		try {Statement stmt = con.statement("SELECT descripcion FROM turnos WHERE id_turno = " + id_turno);
			ResultSet rs = stmt.executeQuery("COLOCAR EL STATEMENT");
			System.out.print("\nTurno: " + rs.getInt("id_turno"));
			System.out.print(" | Descripción: " + rs.getString("descripcion"));
		} catch (SQLException e) {
			System.out.println(e);
		}
	}
	public void borrarTurno(int id_turno) {
		try {PreparedStatement pstmt = con.preparedStatement("DELETE FROM turnos WHERE id_turno = ?");
			pstmt.setInt(1, id_turno);
			pstmt.executeUpdate();
		} catch(SQLException e) {
			System.out.println(e);
		}
	}
}
