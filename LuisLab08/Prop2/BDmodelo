			ResultSet rs = pstmt.executeQuery();
			return rs.next();
		} catch (SQLException e) {
			System.out.println(e);
		}
		return false;
	}
	public boolean buscarTurno(String descripcion, int id_combate) {
		String sql = "SELECT 1 FROM personajes WHERE descripcion = ? AND id_combate = ?";
