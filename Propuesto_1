//Código C++
#include <iostream>
using namespace std;

int suma(int arr[]){
    int sum = 0;
    for (int i = 0; i < 5; i++){
        sum = sum + arr[i]; 
    }
    return sum;
}
int main() {
    int arreglo[5] = {1,2,3,4,5};
    cout << suma(arreglo);
    return 0;
}

//Códio Python
def suma(arr):
    sum = 0
    for i in arr:
        sum = sum + i
    return sum

arreglo = [1,2,3,4,5]
print(suma(arreglo))

//Código Java
package lab01;

public class prop1 {
	public static int suma(int[] arr) {
		int sum = 0;
		for (int i = 0; i < 5; i++) {
			sum = sum + arr[i];
		}
		return sum;
	}
	public static void main(String[] args) {
		int[] arreglo = {1,2,3,4,5};
		System.out.println(suma(arreglo));
	}
}
